---
interface Props {
	text?: string;
}
const { text } = Astro.props;

const authURL = encodeURI(`https://discord.com/api/oauth2/authorize?client_id=886415887287066664&redirect_uri=${import.meta.env.AUTH_CALLBACK}&response_type=code&scope=${import.meta.env.AUTH_SCOPES}`);
---

<span>
	<a class="font-sans" rel="noreferrer" href={authURL}>
		<span class={!!text ? "underline" : ""}>{text || "Login"}</span>
		<i class="fa-brands fa-discord"></i>
	</a>
</span>
